<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@xml/when_press">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/chatroom_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/profile_img"/>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/chatroom_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Chatroom_name"
                android:gravity="bottom"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/chatroom_name"/>

            <TextView
                android:id="@+id/people_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:gravity="bottom"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="16sp"
                android:textColor="#808080"/>

            <TextView
                android:id="@+id/chatroom_last_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="오후 12:05"
                android:textColor="#BFBFBF"
                android:textSize="10sp"
                android:gravity="bottom|right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/chatroom_last_comment"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:text="Chatroom last commentChatroom last comment Chatroom last comment Chatroom last comment Chatroom last comment"
                android:textSize="12sp"
                android:textColor="#737373" />
            <TextView
                android:id="@+id/unread_count"
                android:minWidth="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99+"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@xml/unread_text"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
