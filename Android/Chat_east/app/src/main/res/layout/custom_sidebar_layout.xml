<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="left"
    android:orientation="vertical"
    android:paddingBottom="130px">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="채팅방 서랍"
        android:paddingHorizontal="15dp"
        android:paddingVertical="13dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/top_bar_text"
        android:fontFamily="@font/malgunbd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:paddingVertical="13dp"
        android:onClick="ChatroomImg">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/photo_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진/동영상"
                android:fontFamily="@font/malgun"
                android:layout_gravity="center_vertical"
                android:textColor="@color/top_bar_text"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_point_right"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/picture_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            app:cardElevation="0dp"
            android:layout_weight="1"
            android:onClick="ViewImage1">

            <ImageView
                android:id="@+id/image_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            app:cardElevation="0dp"
            android:layout_weight="1"
            android:onClick="ViewImage2">

            <ImageView
                android:id="@+id/image_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            app:cardElevation="0dp"
            android:layout_weight="1"
            android:onClick="ViewImage3">

            <ImageView
                android:id="@+id/image_view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            app:cardElevation="0dp"
            android:layout_weight="1"
            android:onClick="ViewImage4">

            <ImageView
                android:id="@+id/image_view4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:paddingVertical="13dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/file_icon_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="파일"
                android:fontFamily="@font/malgun"
                android:layout_gravity="center_vertical"
                android:textColor="@color/top_bar_text"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_point_right"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/profile_border"
        android:layout_marginHorizontal="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대화상대"
        android:paddingHorizontal="15dp"
        android:paddingVertical="13dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/top_bar_text"
        android:fontFamily="@font/malgunbd"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@xml/when_press_side_bar"
        android:padding="8dp"
        android:onClick="InviteFriend">

        <ImageView
            android:id="@+id/friend_add"
            android:layout_width="35dp"
            android:layout_gravity="center_vertical"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:background="@xml/add_friend"
            android:src="@drawable/friend_plus_icon"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="대화상대 초대"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/friend_add_text"
            android:fontFamily="@font/malgun"
            android:textStyle="bold"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@xml/when_press_side_bar"
        android:padding="8dp"
        android:onClick="MyProfile">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            >

            <ImageView
                android:id="@+id/sidebar_my_profile_image"
                android:layout_width="35dp"
                android:layout_gravity="center_vertical"
                android:layout_height="35dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@xml/add_friend"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/sidebar_my_nickname"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="nickname"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/top_bar_text"
            android:fontFamily="@font/malgun"
            android:textStyle="bold"
            android:textSize="14sp"/>

    </LinearLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/join_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"/>


</LinearLayout>
