<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/side_bar_friend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@xml/when_press_side_bar"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            >

            <ImageView
                android:id="@+id/friend_profile_image"
                android:layout_width="35dp"
                android:layout_gravity="center_vertical"
                android:layout_height="35dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@xml/add_friend"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/sidebar_nickname"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:text="nickname"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/top_bar_text"
            android:fontFamily="@font/malgun"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/side_bar_add_friend_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="5dp"
            android:layout_gravity="right|center_vertical"
            app:cardElevation="0dp" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="9dp"
                android:src="@drawable/add_friend_icon"
                android:background="@color/side_bar_add_friend_background"/>


        </androidx.cardview.widget.CardView>



    </LinearLayout>




</LinearLayout>
